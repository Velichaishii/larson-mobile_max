                    <i class="authorization__icon icon person"></i><a class="authorization__link" href="#">Вход</a>
                </li>
                <li class="authorization__item">
                    <a class="authorization__link" href="#">Регистрация</a>
                </li>
            </ul>
        </div>
        <div class="burger-menu__body">
            <nav class="nav">
                <ul class="nav__list">
                    <li class="nav__item">
                        <div class="nav__row">
                            <a class="nav__link" href="#">
                                <div class="nav__icon">
                                    <i class="icon i"></i>
                                </div>
                                О компании
                            </a>
                            <div class="nav__toggle">
                                <i class="nav__arrow"></i>
                            </div>
                        </div>
                    </li>
                    <li class="nav__item">
                        <div class="nav__row">
                            <a class="nav__link" href="#">
                                <div class="nav__icon">
                                    <i class="icon portfolio"></i>
                                </div>
                                Сервисы
                            </a>
                            <div class="nav__toggle">
                                <i class="nav__arrow"></i>
                            </div>
                        </div>
                    </li>
                    <li class="nav__item">
                        <div class="nav__row">
                            <a class="nav__link" href="#">
                                <div class="nav__icon">
                                    <i class="icon money"></i>
                                </div>
                                Метатрейдер
                            </a>
                            <div class="nav__toggle">
                                <i class="nav__arrow"></i>
                            </div>
                        </div>
                    </li>
                    <li class="nav__item">
                        <div class="nav__row">
                            <a class="nav__link" href="#">
                                <div class="nav__icon">
                                    <i class="icon partnership"></i>
                                </div>
                                Партнерство
                            </a>
                            <div class="nav__toggle">
                                <i class="nav__arrow"></i>
                            </div>
                        </div>
                    </li>
                    <li class="nav__item">
                        <div class="nav__row">
                            <a class="nav__link" href="#">
                                <div class="nav__icon">
                                    <i class="icon megaphone"></i>
                                </div>
                                Новости
                            </a>
                            <div class="nav__toggle">
                                <i class="nav__arrow"></i>
                            </div>
                        </div>
                    </li>
                    <li class="nav__item">
                        <div class="nav__row">
                            <a class="nav__link" href="#">
                                <div class="nav__icon">
                                    <i class="icon question"></i>
                                </div>
                                FAQ
                            </a>
                            <div class="nav__toggle">
                                <i class="nav__arrow"></i>
                            </div>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="burger-menu__footer">
            <div class="service">
                <div class="service__item">
                    <a class="service__link" href="#">
                        <i class="icon tel"></i>8-800-550-00-15
                    </a>
                </div>
                <div class="service__item">
                    <a class="service__link" href="#">
                        <i class="icon desktop"></i>Посмотреть полную версию
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>